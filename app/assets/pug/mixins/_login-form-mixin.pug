mixin loginForm(loginFormObj)
	#login-user-has-account.login-form.modal.fade(tabindex='-1' role='dialog' aria-labelledby='loginFormLabel' aria-hidden='true')
	.modal-dialog.modal-xl(role='document')
		.modal-content
			.modal-body.text-center
				.container
					h3.login-form__title= loginFormObj.title
					if loginFormObj.isNewUser
						input(type="text" placeholder="Username")
						input(type="text" placeholder="Username 2")
						input(type="text" placeholder="Username 3")
					else
						input(type="text" placeholder="Name")
						input(type="text" placeholder="Name 2")
						input(type="text" placeholder="Name 3")
