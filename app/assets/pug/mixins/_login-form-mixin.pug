mixin loginForm(loginFormObj)
	// Modal
	div(id=loginFormObj.id class='modal fade' tabindex='-1' role='dialog' aria-labelledby=loginFormObj.label aria-hidden='true')
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					button.close(type='button' data-dismiss='modal' aria-label='Close')
						span(aria-hidden='true') &times;
				.modal-body
					.form-title.text-center
						h4=loginFormObj.title
						.d-flex.flex-column.text-center
							form
								.form-group
									input#email1.form-control(type='email' placeholder='اسم المستخدم أو البريد الإلكتروني')
								.form-group
									input#password1.form-control(type='password' placeholder='كلمة المرور')
								button.btn.btn-info.btn-block.btn-round(type='button') Login
